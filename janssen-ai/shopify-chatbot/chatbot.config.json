  "installation": {
    "note": "Instructions for installing on Shopify with n8n backend",
    "steps": [
      "1. Deploy n8n workflow and note the webhook URL",
      "2. Upload widget.js and styles.css to Shopify theme assets",
      "3. Add CSS link to theme.liquid before </head>",
      "4. Add configuration script with your n8n webhook URL",
      "5. Add widget script tag before </body> in theme.liquid"
    ],
    "snippets": {
      "cssLink": "<link rel=\"stylesheet\" href=\"{{ 'styles.css' | asset_url }}\">",
      "configScript": "<script>window.JANSSEN_WEBHOOK_URL = 'https://your-n8n-domain.com/webhook/janssen-ai-incoming';</script>",
      "scriptTag": "<script src=\"{{ 'widget.js' | asset_url }}\" defer></script>"
    },
    "fullExample": "<!-- Janssen AI Chatbot -->\n<link rel=\"stylesheet\" href=\"{{ 'styles.css' | asset_url }}\">\n<script>window.JANSSEN_WEBHOOK_URL = 'https://your-n8n.com/webhook/janssen-ai-incoming';</script>\n<script src=\"{{ 'widget.js' | asset_url }}\" defer></script>"
  }
