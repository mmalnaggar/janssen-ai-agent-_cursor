  "messages": {
    "supportedTypes": ["text", "product_card", "image", "quick_replies"],
    "maxLength": 1000,
    "enableEmoji": true,
    "enableAttachments": false
  },
  "productCard": {
    "enabled": true,
    "showImage": true,
    "showPrice": true,
    "showDescription": true,
    "maxDescriptionLength": 100,
    "actions": {
      "viewProduct": {
        "enabled": true,
        "openInNewTab": false
      },
      "addToCart": {
        "enabled": true,
        "showQuantitySelector": false
      }
    }
  },
  "behavior": {
    "autoOpen": false,
    "autoOpenDelay": 5000,
    "showUnreadBadge": true,
    "playNotificationSound": false,
    "persistConversation": true,
    "sessionTimeout": 1800000,
    "typingIndicatorDelay": 500
  },
  "backend": {
    "note": "n8n webhook endpoint - set window.JANSSEN_WEBHOOK_URL before loading widget",
    "n8nWebhookPath": "/webhook/janssen-ai-incoming",
    "n8nDefaultUrl": "http://localhost:5678",
    "productionUrl": "https://your-n8n-domain.com",
    "timeout": 15000,
    "retryAttempts": 2,
    "retryDelay": 1000,
    "responseTypes": ["text", "product_card", "handover"],
    "requestPayload": {
      "session_id": "string (auto-generated)",
      "channel": "chat",
      "language": "ar | en",
      "user_message": "string",
      "metadata": {
        "page": "current URL path",
        "customer_id": "optional"
      }
    }
  },
  "shopify": {
    "note": "PLACEHOLDER - Configure with actual Shopify store",
    "storeUrl": "PLACEHOLDER_STORE_URL",
    "enableCartIntegration": true,
    "enableProductLookup": true,
    "enableOrderTracking": false
  },
  "analytics": {
    "enabled": false,
    "trackEvents": [
      "widget_opened",
      "widget_closed",
      "message_sent",
      "message_received",
      "product_viewed",
      "product_added_to_cart",
      "language_changed"
    ],
    "provider": "PLACEHOLDER_ANALYTICS_PROVIDER"
  },
  "accessibility": {
    "enableKeyboardNavigation": true,
    "enableScreenReaderSupport": true,
    "highContrastMode": false,
    "reducedMotion": "auto"
  },
  "triggers": {
    "note": "Conditions to auto-show widget",
    "rules": [
      {
        "id": "time_on_page",
        "condition": "timeOnPage > 30",
        "action": "showWidget",
        "enabled": false
      },
      {
        "id": "exit_intent",
        "condition": "exitIntent",
        "action": "showWidget",
        "enabled": false
      },
      {
        "id": "cart_abandonment",
        "condition": "cartValue > 0 && inactiveFor > 60",
        "action": "showWidgetWithMessage",
        "message": "needHelpWithOrder",
        "enabled": false
      }
    ]
  },
  "quickReplies": {
    "enabled": true,
    "suggestions": {
